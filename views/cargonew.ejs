<%- include("templates/cabecera")%>
<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header  bg-primary text-white"><h3>Nuevo Registro Cargo</h3></div>
            <div class="card-body">
                <form action="/savecargo" method="post">
                    <div class="mb-3">
                        <label for="codigo" class="from-label">IdCargo:</label>
                        <input type="text" class="form-control" id="id" name="id" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="nombre" class="from-label">Cargo:</label>
                        <input type="text" class="form-control" id="car" name="car" tabindex="2">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">Sueldo:</label>
                        <input type="text" class="form-control" id="suel" name="suel" tabindex="3">
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="4">Guardar</button>
                    <a href="/cargo" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
    </div>
</div>